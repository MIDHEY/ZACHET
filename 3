#include<iostream>
#include<string>
#include<sstream>
#include<map>
using namespace std;

int main() {
	system("chcp 1251");
	string str;
	cout << "Введите строку: ";
	getline(cin, str);
	istringstream stream(str);
	map<string, int> map;
	for (string word; stream >> word; ++map[word]);
	pair<string, int> pair;
	for (auto element : map) {
		if (pair.second < element.second) pair = element;
	}
	cout << "Чаще всего встречается слово (" << pair.first << ") в количестве " << pair.second << " раз(а)" << endl;

}
